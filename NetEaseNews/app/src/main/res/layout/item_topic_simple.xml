<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_marginTop="@dimen/item_margin_top_bottom"
        android:layout_marginBottom="@dimen/item_margin_top_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/item_margin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_topic_text_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/color_title_tv"
                android:text="标题"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_margin"
                android:src="@mipmap/dotted_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/item_topic_text_first_dp_civ"
                    android:layout_width="@dimen/item_topic_dp_size"
                    android:layout_height="@dimen/item_topic_dp_size"
                    android:scaleType="fitXY"
                    android:src="@mipmap/a_5"/>
                <ImageView
                    android:layout_width="@dimen/item_topic_dp_size"
                    android:layout_height="@dimen/item_topic_dp_size"
                    android:scaleType="fitXY"
                    android:src="@mipmap/no_circle"/>
                <ImageView
                    android:id="@+id/first_double_quotation_marks_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/abl"
                    android:layout_toRightOf="@id/item_topic_text_first_dp_civ"/>
                <TextView
                    android:id="@+id/item_topic_text_first_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_title_tv"
                    android:layout_toRightOf="@id/first_double_quotation_marks_iv"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/abm"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/item_topic_text_second_dp_civ"
                    android:layout_width="@dimen/item_topic_dp_size"
                    android:layout_height="@dimen/item_topic_dp_size"
                    android:src="@mipmap/a_5"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="@dimen/item_topic_dp_size"
                    android:layout_height="@dimen/item_topic_dp_size"
                    android:scaleType="fitXY"
                    android:src="@mipmap/no_circle"/>
                <ImageView
                    android:id="@+id/second_double_quotation_marks_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/abl"
                    android:layout_toRightOf="@id/item_topic_text_second_dp_civ"/>
                <TextView
                    android:id="@+id/item_topic_text_second_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_title_tv"
                    android:layout_toRightOf="@id/second_double_quotation_marks_iv"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/abm"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_margin"
                android:src="@mipmap/dotted_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_topic_text_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_light"/>
                <View
                    android:layout_width="@dimen/item_topic_vertical_line_width"
                    android:layout_height="@dimen/item_topic_vertical_line_height"
                    android:layout_marginLeft="@dimen/item_topic_vertical_line_distance"
                    android:layout_marginRight="@dimen/item_topic_vertical_line_distance"
                    android:background="@color/color_line"/>
                <TextView
                    android:id="@+id/item_topic_text_follow_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="@dimen/item_topic_vertical_line_width"
                    android:layout_height="@dimen/item_topic_vertical_line_height"
                    android:layout_marginLeft="@dimen/item_topic_vertical_line_distance"
                    android:layout_marginRight="@dimen/item_topic_vertical_line_distance"
                    android:background="@color/color_line"/>
                <TextView
                    android:id="@+id/item_topic_text_discussion_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="@dimen/item_topic_follow_btn_width"
                    android:layout_height="@dimen/item_topic_follow_btn_height"
                    android:scaleType="fitXY"
                    android:src="@mipmap/follow"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>