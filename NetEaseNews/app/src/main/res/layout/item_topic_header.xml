<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:scrollbars="none"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/item_margin"
        android:layout_marginLeft="@dimen/item_margin"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_elevation">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_topic_head_first_iv"
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_pic_height"
                    android:src="@mipmap/a_5"
                    android:scaleType="centerInside"/>
                <LinearLayout
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_tv_height"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/item_topic_head_first_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请稍后"
                        android:textSize="@dimen/item_topic_head_tv_size"
                        android:textColor="@color/color_title_tv"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_elevation">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_topic_head_second_iv"
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_pic_height"
                    android:src="@mipmap/a_5"
                    android:scaleType="centerInside"/>
                <LinearLayout
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_tv_height"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/item_topic_head_second_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请稍后"
                        android:textSize="@dimen/item_topic_head_tv_size"
                        android:textColor="@color/color_title_tv"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_elevation">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_topic_head_third_iv"
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_pic_height"
                    android:src="@mipmap/a_5"
                    android:scaleType="centerInside"/>
                <LinearLayout
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_tv_height"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/item_topic_head_third_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请稍后"
                        android:textSize="@dimen/item_topic_head_tv_size"
                        android:textColor="@color/color_title_tv"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_elevation">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_topic_head_fourth_iv"
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_pic_height"
                    android:src="@mipmap/a_5"
                    android:scaleType="centerInside"/>
                <LinearLayout
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_tv_height"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/item_topic_head_fourth_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请稍后"
                        android:textSize="@dimen/item_topic_head_tv_size"
                        android:textColor="@color/color_title_tv"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_margin"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_elevation">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_topic_head_fifth_iv"
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_pic_height"
                    android:src="@mipmap/a_5"
                    android:scaleType="centerInside"/>
                <LinearLayout
                    android:layout_width="@dimen/item_topic_head_pic_width"
                    android:layout_height="@dimen/item_topic_head_tv_height"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/item_topic_head_fifth_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请稍后"
                        android:textSize="@dimen/item_topic_head_tv_size"
                        android:textColor="@color/color_title_tv"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</HorizontalScrollView>